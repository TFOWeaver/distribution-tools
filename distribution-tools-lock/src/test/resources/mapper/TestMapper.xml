<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weaver.test.TestDao">

    <resultMap id="users" type="com.weaver.test.Users">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
    </resultMap>

    <select id="getUserList" resultMap="users">
        select id, name, order_id, address from users
    </select>

    <select id="getUserById" resultMap="users">
        select id, name, order_id, address from users where name = #{name}
    </select>

    <update id="update" parameterType="com.weaver.test.Users">
        update
    </update>

    <insert id="insert" parameterType="com.weaver.test.Users" useGeneratedKeys="true" keyProperty="id">
        insert into users values(#{id}, #{name}, #{orderId}, #{address});
    </insert>
</mapper>
